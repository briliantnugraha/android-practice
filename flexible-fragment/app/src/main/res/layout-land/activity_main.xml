<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <fragment
        android:layout_weight="1"
        android:name="com.brilian.flexible_fragment.HeadlineFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/headlineFragment"
        tools:layout="@layout/headline_fragment"/>
    <fragment
        android:layout_weight="2"
        android:name="com.brilian.flexible_fragment.ContentFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/contentFragment"
        tools:layout="@layout/content_fragment"/>
</LinearLayout>